	tr
		td(align="center" height="100%" valign="top" width="100%")
			+ie-open({table: 648})
			table(width='648', cellspacing='0', cellpadding='0', border='0', align='center', style='max-width:648px; width:100%;' bgcolor='#4a90e2')
				tr
					td(align='center', valign='top')
						table(width='600', cellspacing='0', cellpadding='0', border='0', align='center', style='max-width:600px; width:100%;')
							tr
								td(align='center' height="65" valign='middle')
									p(style="font-family: Roboto, sans-serif; font-size:16px;line-height:16px;font-weight: 300;text-transform:uppercase; color:#ffffff") Ожидание подтверждения бронирования 
										b 976433
