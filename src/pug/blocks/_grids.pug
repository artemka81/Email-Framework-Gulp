//- grid-one
//---------------
mixin grid-one
	tr
		td(align="center" height="100%" valign="top" width="100%")
			+ie-open({table: 640})
			table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:640px;" bgcolor="#ffffff")
				if block
					block
				else
					tr
						td(align="center" valign="top" style="font-size:14px;") Grid One 
			+ie-close

//- grid-two
//---------------
mixin grid-two
	tr
		td(align="center" height="100%" valign="top" width="100%")
			+ie-open({table: 640})
			table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:640px;" bgcolor="#ffffff")
				tr
					td(align="center" valign="top" style="font-size:0;")
						+ie-open({table: 640, cell:310})
						div(style="display:inline-block; max-width:310px; vertical-align:top; width:100%;")
							table( align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:310px;" class="deviceWidth")
								tr
									td(align="center" valign="top" style="font-size:14px;")  Grid Two
						+ie-col({cell:310})
						div(style="display:inline-block; max-width:310px; vertical-align:top; width:100%;")
							table( align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width:310px;" class="deviceWidth")
								tr
									td(align="center" valign="top" style="font-size:14px;")  Grid Two
						+ie-close
			+ie-close